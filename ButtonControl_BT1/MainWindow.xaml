<Window x:Class="ButtonControl_BT1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonControl_BT1"
        mc:Ignorable="d"
        Title="Tổng 2 số (SE181943-Trương Hào Hiệp)" Height="450" Width="800">
    <Grid>
        <Label Content="Hệ số _a:" 
               Target="{Binding ElementName=txtA}"
               HorizontalAlignment="Left" Margin="31,29,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtA" HorizontalAlignment="Left" Margin="31,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="5"/>
        <Label Content="Hệ số _b:"
               Target="{Binding ElementName=txtB}"
               HorizontalAlignment="Left" Margin="30,81,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtB" HorizontalAlignment="Left" Margin="31,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="5"/>
        <Label Content="Kết quả:" HorizontalAlignment="Left" Margin="31,130,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbKetQua" HorizontalAlignment="Left" Margin="31,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="#FF69F408"/>
        <Button x:Name="btnTong" HorizontalAlignment="Left" Margin="31,184,0,0" VerticalAlignment="Top" Width="60" Click="btnTong_Click" Height="22">
            <StackPanel Orientation="Horizontal">
                <Image Height="16" Source="/Images/1564491_add_create_new_plus_icon.png" Stretch="Fill" Width="23" IsEnabled="False"/>
                <TextBlock Text="Tổng" VerticalAlignment="Center" Width="33"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnThoat" HorizontalAlignment="Left" Margin="105,184,0,0" VerticalAlignment="Top" Width="62" Click="btnThoat_Click">
            <StackPanel Orientation="Horizontal">
                <Image Height="16" Source="/Images/326635_app_exit_to_icon.png" Stretch="Fill" Width="16"/>
                <TextBlock Text="Thoát" VerticalAlignment="Center" Height="18" Width="36" RenderTransformOrigin="0.909,0.587"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>
