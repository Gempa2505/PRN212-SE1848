<Window x:Class="HelloWpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpfApp"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Đăng nhập hệ thống quản trị" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Foreground="#FF5DC93C" FontWeight="Bold" Margin="0,10,0,0"/>
        <Label Content="_Username:" 
               Target="{Binding ElementName=txtUserName}"
               HorizontalAlignment="Left" Margin="205,110,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.484,-7.298" FontSize="20"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="335,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="173" FontSize="20"/>
        <Label Content="_Password:" 
               Target="{Binding ElementName=txtPassword}"
               HorizontalAlignment="Left" Margin="205,152,0,0" VerticalAlignment="Top" FontSize="20"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="335,156,0,0" VerticalAlignment="Top" Width="173" FontSize="20"/>
        <Button x:Name="btnDangNhap" Content="Đăng Nhập" HorizontalAlignment="Left" Margin="259,209,0,0" VerticalAlignment="Top" FontSize="20" Width="120" BorderBrush="#FF6F6F6F" Background="#FF39FF0A" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Content="Thoát" HorizontalAlignment="Left" Margin="425,209,0,0" VerticalAlignment="Top" FontSize="20" Width="83" Background="#FF24FF06" Click="btnThoat_Click"/>

    </Grid>
</Window>
